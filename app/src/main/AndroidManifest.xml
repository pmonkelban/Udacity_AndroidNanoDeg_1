<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="udacity.nano.spotifystreamer" >

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!--
        Without android:launchMode="singleTop" the savedInstanceState
        Bundle is always null when onCreate(), onCreateView(), and
        onActiviteCreated() in ArtistSearchFragment.
        -->
        <activity
            android:name=".ArtistSearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TopTracksActivity"
            android:label="@string/title_activity_top_tracks"
            android:parentActivityName=".ArtistSearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ArtistSearchActivity" />
        </activity>
    </application>

</manifest>
