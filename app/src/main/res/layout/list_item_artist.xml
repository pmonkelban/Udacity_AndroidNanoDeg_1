<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artist_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="@drawable/list_item_selector">

    <ImageView
        android:id="@+id/image_artist_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/icon_height"
        android:maxWidth="@dimen/icon_width"
        android:minHeight="@dimen/icon_height"
        android:minWidth="@dimen/icon_width" />

    <TextView
        android:id="@+id/text_artists_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp" />

</LinearLayout>