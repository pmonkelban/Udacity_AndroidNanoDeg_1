<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="@drawable/list_item_selector">

    <!--
      Adding min and max Height and Widths ensure that
     the row looks consistent, event if the icon is not
     loaded.
     -->
    <ImageView
        android:id="@+id/image_track_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/icon_height"
        android:maxWidth="@dimen/icon_width"
        android:minHeight="@dimen/icon_height"
        android:minWidth="@dimen/icon_width"
        android:padding="@dimen/icon_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/text_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>