<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="prefs_allow_explicit"
        android:title="@string/prefs_allow_explict_title"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="prefs_show_on_lock"
        android:title="@string/prefs_show_on_lock_title"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="prefs_country_code"
        android:title="@string/prefs_country_code_title"
        android:defaultValue="@string/prefs_default_country_code"
        android:selectAllOnFocus="true"
        android:inputType="textCapCharacters"
        android:capitalize="characters"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="8"/>

</PreferenceScreen>
